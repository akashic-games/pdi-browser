{
  "name": "@akashic/pdi-browser",
  "version": "0.12.0",
  "description": "An akashic-pdi implementatation for Web browsers",
  "main": "index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "prepublish": "npm run clean && npm run build",
    "clean": "npm run clean:ts && npm run testem:after",
    "clean:ts": "shx rm -rf ./lib && shx rm -rf ./build",
    "build": "npm run compile:ts && npm run compile:bundle && npm run compile:minify",
    "compile:ts": "tsc -p ./",
    "compile:bundle": "shx mkdir -p build && browserify -r ./lib/index.js:@akashic/pdi-browser -x @akashic/akashic-engine -d | exorcist ./build/pdi-browser.js.map > ./build/pdi-browser.js",
    "compile:minify": "uglifyjs ./build/pdi-browser.js --compress --mangle -o ./build/pdi-browser.min.js",
    "testem:before": "node ./script/makeTestBundle.js > ./script/test-bundle.js",
    "testem:after": "shx rm -rf ./script/test-bundle.js",
    "lint": "npm run lint:ts && npm run lint:md",
    "lint:ts": "tslint --project tsconfig.json -c tslint.json",
    "lint:md": "remark ./*.md --frail --no-stdout --rc-path ./.remarkrc",
    "test": "npm run lint && testem"
  },
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/akashic-games/pdi-browser.git"
  },
  "files": [
    "package.json",
    "README.md",
    "lib",
    "build",
    "index.js"
  ],
  "devDependencies": {
    "@akashic/akashic-pdi": "~1.11.0",
    "@akashic/amflow": "~0.3.1",
    "@akashic/playlog": "~1.3.0",
    "@types/node": "~9.4.2",
    "browserify": "~16.4.0",
    "es5-shim": "^4.5.8",
    "exorcist": "~1.0.0",
    "glob": "~7.1.4",
    "jasmine": "~3.4.0",
    "jasmine-reporters": "~2.3.2",
    "jasmine-terminal-reporter": "~1.0.3",
    "phantomjs": "~2.1.7",
    "remark-cli": "5.0.0",
    "remark-lint": "~6.0.5",
    "shx": "~0.3.2",
    "testem": "~2.17.0",
    "tslint": "~5.18.0",
    "typescript": "~2.4.2",
    "uglify-js": "~3.6.0"
  },
  "dependencies": {
    "@akashic/akashic-engine": "~1.14.0"
  },
  "publishConfig": {
    "@akashic:registry": "https://registry.npmjs.org/"
  }
}
